rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Benutzerauthentifizierung prüfen
    function isAuthenticated() {
      return request.auth.uid != null;
    }
    
    // Prüfen ob der aktuelle Benutzer der Ersteller ist
    function isOwner(resource) {
      return isAuthenticated() && resource.data.createdBy == request.auth.uid;
    }
    
    // Gerichte
    match /dishes/{dishId} {
      allow read: if isAuthenticated() && resource.data.createdBy == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.createdBy == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.createdBy == request.auth.uid;
    }
    
    // Mahlzeitenpläne
    match /mealPlans/{planId} {
      allow read: if isAuthenticated() && resource.data.createdBy == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.createdBy == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.createdBy == request.auth.uid;
    }
    
    // Wöchentliche Ernährungsziele
    match /weeklyNutritionGoals/{goalId} {
      allow read: if isAuthenticated() && resource.data.createdBy == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.createdBy == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.createdBy == request.auth.uid;
    }
    
    // Benutzerprofile
    match /profiles/{email} {
      allow read: if isAuthenticated() && email == request.auth.token.email;
      allow write: if isAuthenticated() && email == request.auth.token.email;
    }
    
    // Geteilte Gerichte
    match /sharedDishes/{sharedDishId} {
      // Jeder authentifizierte Benutzer kann ein geteiltes Gericht erstellen
      allow create: if isAuthenticated();
      
      // Der Ersteller kann sein geteiltes Gericht lesen, aktualisieren oder löschen
      allow read, update, delete: if isAuthenticated() && resource.data.sharedBy == request.auth.uid;
      
      // Jeder authentifizierte Benutzer kann ein geteiltes Gericht lesen, wenn er den Code kennt
      // Dies wird normalerweise über die shareCode-Abfrage geschehen
      allow read: if isAuthenticated();
    }
  }
} 